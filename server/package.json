{
  "name": "bug-tracker-server",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=\"unit\"",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=\"integration\"",
    "setup-test-db": "node scripts/setupTestDB.js",
    "debug": "node --inspect src/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.0.0",
    "mongodb-memory-server": "^8.15.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
